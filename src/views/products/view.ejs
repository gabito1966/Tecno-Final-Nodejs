<div class="max-w-4xl mx-auto mt-10 bg-white shadow rounded-xl p-6">
    <div class="overflow-hidden mb-6 w-full aspect-square rounded">
        <img src="<%= product ? product.image : '/placeholder.png' %>" alt="<%= product ? product.name : '' %>"
            class="w-full h-full object-cover rounded">
    </div>

    <div class="mb-6">
        <h1 class="text-3xl font-bold mb-3">
            <%= product.name %>
        </h1>
        <p class="text-gray-700 mb-2">
            <%= product.description %>
        </p>
        <p class="text-lg font-semibold mb-2">$<%= Number(product.price).toFixed(2) %>
        </p>
        <p class="text-gray-500 mb-2">
            Categoría: <strong>
                <%= product.category || 'Sin categoría' %>
            </strong>
        </p>
    </div>

    <div class="flex flex-wrap gap-4">
        <a href="/products/edit/<%= product.id %>"
            class="px-4 py-2 bg-teal-600 hover:bg-teal-800 text-white rounded-lg">
            Editar
        </a>

        <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST"
            onsubmit="return confirm('¿Eliminar producto?')">
            <button class="px-4 py-2 bg-red-500 hover:bg-red-700 text-white rounded-lg">
                Eliminar
            </button>
        </form>

        <a href="/products/view" class="px-4 py-2 bg-gray-500 hover:bg-gray-700 text-white rounded-lg">
            Volver
        </a>
    </div>
</div>
<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Productos</h1>
    <a href="/products/create" class="px-4 py-2 bg-sky-600 hover:bg-sky-700 text-white rounded-lg shadow">
        Crear producto
    </a>
</div>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% products.forEach(product=> { %>
        <div class="bg-white shadow rounded overflow-hidden flex flex-col h-full relative">
            <div class="overflow-hidden w-full aspect-square">
                <img src="<%= product.image || '/placeholder.png' %>" class="w-full h-full object-cover">
            </div>
            <div class="p-4 flex-1">
                <h2 class="text-xl font-bold mb-2">
                    <%= product.name %>
                </h2>
                <p class="text-gray-600 mb-2">ID: <%= product.id %>
                </p>
                <p class="text-gray-600 mb-2">
                    <%= product.description %>
                </p>
                <p class="font-semibold mb-2">$<%= Number(product.price).toFixed(2) %>
                </p>
                <p class="text-gray-500">Categoría: <strong>
                        <%= product.category || 'Sin categoría' %>
                    </strong></p>
            </div>
            <div class="flex justify-between px-6 mb-4">
                <a href="/products/view/<%= product.id %>"
                    class="px-4 py-2 bg-sky-600 hover:bg-sky-700 text-white rounded-lg">Ver</a>
                <a href="/products/edit/<%= product.id %>"
                    class="px-4 py-2 bg-teal-600 hover:bg-teal-800 text-white rounded-lg">Editar</a>
                <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST"
                    onsubmit="return confirm('¿Eliminar producto?')">
                    <button class="px-4 py-2 bg-red-500 hover:bg-red-700 text-white rounded-lg">Eliminar</button>
                </form>
            </div>
        </div>
        <% }) %>
</div>
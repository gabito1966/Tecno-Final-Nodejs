<div class="max-w-md mx-auto mt-10 bg-white shadow rounded-xl p-6">

    <h1 class="text-2xl font-bold mb-4">Crear Usuario</h1>

    <% if (error) { %>
        <div class="bg-red-100 text-red-700 p-2 rounded mb-4">
            <%= error %>
        </div>
        <% } %>

            <form action="/users/create" method="POST">

                <label class="block mb-2 font-semibold">Nombre</label>
                <input type="text" name="name" class="w-full border px-3 py-2 rounded mb-4">

                <label class="block mb-2 font-semibold">Email</label>
                <input type="email" name="email" class="w-full border px-3 py-2 rounded mb-4">

                <label class="block mb-2 font-semibold">Contrase√±a</label>
                <input type="password" name="password" class="w-full border px-3 py-2 rounded mb-4">

                <label class="block mb-2 font-semibold">Rol</label>
                <select name="role" class="w-full border px-3 py-2 rounded mb-4">
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>

                <button type="submit" class="px-4 py-2 bg-sky-600 hover:bg-sky-700 text-white rounded-lg shadow">
                    Crear usuario
                </button>
            </form>
</div>
<div class="max-w-4xl mx-auto mt-10 bg-white shadow rounded-xl p-6">
    <h1 class="text-2xl font-bold mb-4">Usuarios</h1>

    <div class="flex justify-between items-center mb-4">
        <p class="text-gray-600">Total: <%= users.length %>
        </p>
        <a href="/users/create" class="px-4 py-2 bg-sky-600 hover:bg-sky-700 text-white rounded-lg">
            Crear usuario
        </a>
    </div>

    <table class="w-full text-left border-collapse">
        <thead>
            <tr class="border-b">
                <th class="py-2">Nombre</th>
                <th class="py-2">Email</th>
                <th class="py-2">Rol</th>
                <th class="py-2">Creado</th>
                <th class="py-2 text-right">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user=> { %>
                <tr class="border-b hover:bg-gray-50">
                    <td class="py-2">
                        <%= user.name %>
                    </td>
                    <td class="py-2">
                        <%= user.email %>
                    </td>
                    <td class="py-2 capitalize">
                        <%= user.role %>
                    </td>
                    <td class="py-2">
                        <% if (user.createdAt) { %>
                            <%= new Date(user.createdAt.toDate ? user.createdAt.toDate() : user.createdAt)
                                .toLocaleDateString() %>
                                <% } else { %> - <% } %>
                    </td>
                    <td class="py-2 text-right gap-5 flex justify-end">
                        <!-- Editar redirige a form.ejs vía renderEditUser -->
                        <a href="/users/edit/<%= user.id %>"
                            class="px-3 py-1 bg-emerald-500 text-white rounded hover:bg-emerald-600">
                            Editar
                        </a>

                        <form action="/users/<%= user.id %>?_method=DELETE" method="POST" style="display:inline"
                            onsubmit="return confirm('¿Eliminar usuario?')">
                            <button class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-700">
                                Eliminar
                            </button>
                        </form>

                        <a href="/users/view/<%= user.id %>"
                            class="px-3 py-1 bg-teal-500 text-white rounded hover:bg-teal-600">
                            Ver
                        </a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>
<% if (error) { %>
    <div class="mb-4 p-3 rounded bg-red-100 text-red-800 border border-red-200">
        <%= error %>
    </div>
    <% } %>

        <% if (success) { %>
            <div class="mb-4 p-3 rounded bg-green-100 text-green-800 border border-green-200">
                <%= success %>
            </div>
            <% } %>
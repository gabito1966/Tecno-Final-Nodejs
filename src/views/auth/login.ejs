<div class="max-w-md mx-auto mt-20 bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold mb-4">Login</h2>

    <%- include('../partials/messages') %>

        <form method="POST" action="/auth/login">
            <input type="email" name="email" placeholder="Correo electrónico" class="w-full p-2 border mb-2 rounded"
                required />
            <input type="password" name="password" placeholder="Contraseña" class="w-full p-2 border mb-4 rounded"
                required />
            <button type="submit" class="w-full bg-sky-600 text-white p-2 rounded hover:bg-sky-700">Login</button>
        </form>

        <p class="mt-4 text-sm">
            ¿No tienes cuenta?
            <a href="/auth/register" class="text-blue-600 hover:underline">Regístrate</a>
        </p>
</div>
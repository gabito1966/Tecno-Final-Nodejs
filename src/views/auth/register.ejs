<div class="min-h-screen flex items-center justify-center bg-gray-200 px-4">
    <div class="w-full max-w-md bg-white p-6 rounded-lg shadow-lg transition-colors">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">
            Registro
        </h2>

        <%- include('../partials/messages') %>

            <form method="POST" action="/auth/register" class="flex flex-col gap-4">
                <div>
                    <label for="name" class="block mb-1 font-semibold text-gray-700">
                        Nombre de usuario
                    </label>
                    <input type="text" id="name" name="name" placeholder="Tu nombre" required
                        value="<%= typeof name !== 'undefined' ? name : '' %>"
                        class="w-full p-2 border rounded focus:outline-none focus:ring focus:ring-sky-300" />
                </div>

                <div>
                    <label for="email" class="block mb-1 font-semibold text-gray-700">
                        Correo electrónico
                    </label>
                    <input type="email" id="email" name="email" placeholder="ejemplo@correo.com" required
                        value="<%= typeof email !== 'undefined' ? email : '' %>"
                        class="w-full p-2 border rounded focus:outline-none focus:ring focus:ring-sky-300" />
                </div>

                <div>
                    <label for="password" class="block mb-1 font-semibold text-gray-700">
                        Contraseña
                    </label>
                    <input type="password" id="password" name="password" placeholder="********" required
                        class="w-full p-2 border rounded focus:outline-none focus:ring focus:ring-sky-300" />
                </div>

                <button type="submit"
                    class="w-full bg-blue-600 text-white p-2 rounded hover:bg-blue-700 transition-colors">
                    Registrarse
                </button>
            </form>

            <p class="mt-4 text-center text-sm text-gray-600">
                ¿Ya tienes cuenta?
                <a href="/auth/login" class="text-blue-600 hover:underline">
                    Inicia sesión
                </a>
            </p>
    </div>
</div>
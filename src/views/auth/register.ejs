<div class="max-w-md mx-auto mt-20 bg-white p-6 rounded shadow">
    <h2 class="text-2xl font-bold mb-4">Registro</h2>

    <!-- Incluir partial de mensajes -->
    <%- include('../partials/messages') %>

        <form method="POST" action="/auth/register">
            <input type="text" name="name" placeholder="Nombre usuario" class="w-full p-2 border mb-2 rounded"
                required />
            <input type="email" name="email" placeholder="Correo electrónico" class="w-full p-2 border mb-2 rounded"
                required />
            <input type="password" name="password" placeholder="Contraseña" class="w-full p-2 border mb-4 rounded"
                required />
            <button type="submit"
                class="w-full bg-blue-600 text-white p-2 rounded hover:bg-blue-700">Registrarse</button>
        </form>

        <p class="mt-4 text-sm">
            ¿Ya tienes cuenta?
            <a href="/auth/login" class="text-blue-600 hover:underline">Inicia sesión</a>
        </p>
</div>